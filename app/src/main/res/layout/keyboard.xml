<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/keyboard_background"
    android:paddingStart="2dp"
    android:paddingEnd="2dp"
    android:paddingTop="4dp"
    android:paddingBottom="48dp">

    <!-- Toolbar: Gboard-like toolbar with AI features -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F8F8F8"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/toolbar_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:text="Hold the buttons to start"
            android:textSize="11sp"
            android:textStyle="italic"
            android:textColor="#666666"
            android:layout_marginEnd="8dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="6dp">

            <Button
                android:id="@+id/toolbar_microphone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_button_background"
                android:text="Transcribe"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:contentDescription="Voice input" />

            <ProgressBar
                android:id="@+id/toolbar_microphone_progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:indeterminateTint="#3A3F47"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginEnd="6dp">

            <Button
                android:id="@+id/toolbar_draft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_button_background"
                android:text="AI Draft"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:contentDescription="AI Draft" />

            <ProgressBar
                android:id="@+id/toolbar_draft_progress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:indeterminateTint="#3A3F47"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Context toggle group: lightbulb icon + switch -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/toolbar_context_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lightbulb"
                android:contentDescription="Context indicator"
                android:layout_marginEnd="4dp" />

            <Switch
                android:id="@+id/toolbar_context_toggle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:contentDescription="Toggle screen context"
                android:thumbTint="#FFFFFF"
                android:trackTint="#666666" />
        </LinearLayout>

        <!-- Memory toggle group: brain icon + switch -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="4dp">

            <ImageView
                android:id="@+id/toolbar_memory_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_brain"
                android:contentDescription="Memory indicator"
                android:layout_marginEnd="4dp" />

            <Switch
                android:id="@+id/toolbar_memory_toggle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:contentDescription="Toggle memory context"
                android:thumbTint="#FFFFFF"
                android:trackTint="#666666" />
        </LinearLayout>

    </LinearLayout>

    <!-- Row 1: Q W E R T Y U I O P -->
    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <Button android:id="@+id/key_q" style="@style/KeyButton" android:text="Q" />
        <Button android:id="@+id/key_w" style="@style/KeyButton" android:text="W" />
        <Button android:id="@+id/key_e" style="@style/KeyButton" android:text="E" />
        <Button android:id="@+id/key_r" style="@style/KeyButton" android:text="R" />
        <Button android:id="@+id/key_t" style="@style/KeyButton" android:text="T" />
        <Button android:id="@+id/key_y" style="@style/KeyButton" android:text="Y" />
        <Button android:id="@+id/key_u" style="@style/KeyButton" android:text="U" />
        <Button android:id="@+id/key_i" style="@style/KeyButton" android:text="I" />
        <Button android:id="@+id/key_o" style="@style/KeyButton" android:text="O" />
        <Button android:id="@+id/key_p" style="@style/KeyButton" android:text="P" />
    </LinearLayout>

    <!-- Row 2: A S D F G H J K L -->
    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button android:id="@+id/key_a" style="@style/KeyButton" android:text="A" />
        <Button android:id="@+id/key_s" style="@style/KeyButton" android:text="S" />
        <Button android:id="@+id/key_d" style="@style/KeyButton" android:text="D" />
        <Button android:id="@+id/key_f" style="@style/KeyButton" android:text="F" />
        <Button android:id="@+id/key_g" style="@style/KeyButton" android:text="G" />
        <Button android:id="@+id/key_h" style="@style/KeyButton" android:text="H" />
        <Button android:id="@+id/key_j" style="@style/KeyButton" android:text="J" />
        <Button android:id="@+id/key_k" style="@style/KeyButton" android:text="K" />
        <Button android:id="@+id/key_l" style="@style/KeyButton" android:text="L" />
    </LinearLayout>

    <!-- Row 3: Shift Z X C V B N M Backspace -->
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp">

        <ImageButton
            android:id="@+id/key_shift"
            style="@style/SpecialKeyButton"
            android:src="@drawable/ic_shift"
            android:scaleType="center"
            android:contentDescription="Shift" />
        <Button android:id="@+id/key_z" style="@style/KeyButton" android:text="Z" />
        <Button android:id="@+id/key_x" style="@style/KeyButton" android:text="X" />
        <Button android:id="@+id/key_c" style="@style/KeyButton" android:text="C" />
        <Button android:id="@+id/key_v" style="@style/KeyButton" android:text="V" />
        <Button android:id="@+id/key_b" style="@style/KeyButton" android:text="B" />
        <Button android:id="@+id/key_n" style="@style/KeyButton" android:text="N" />
        <Button android:id="@+id/key_m" style="@style/KeyButton" android:text="M" />
        <ImageButton
            android:id="@+id/key_backspace"
            style="@style/SpecialKeyButton"
            android:src="@drawable/ic_backspace"
            android:scaleType="center"
            android:contentDescription="Backspace" />
    </LinearLayout>

    <!-- Row 4: ?123, comma, spacebar, period, return -->
    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/key_numbers"
            style="@style/SpecialKeyButton"
            android:text="\?123"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1.5" />
        <Button
            android:id="@+id/key_comma"
            style="@style/SpecialKeyButton"
            android:text=","
            android:layout_width="0dp"
            android:layout_weight="0.8" />
        <Button
            android:id="@+id/key_space"
            style="@style/KeyButton"
            android:text=""
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="3.6" />
        <Button
            android:id="@+id/key_period"
            style="@style/SpecialKeyButton"
            android:text="."
            android:layout_width="0dp"
            android:layout_weight="0.8" />
        <ImageButton
            android:id="@+id/key_return"
            style="@style/SpecialKeyButton"
            android:src="@drawable/ic_return"
            android:scaleType="center"
            android:contentDescription="Return"
            android:layout_width="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
